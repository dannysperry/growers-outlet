{
  "presets": [
    [
      "env",
      {
        "modules": false,
        "targets": {
          "browsers": "> 1%",
          "uglify": true
        },
        "useBuiltIns": true
      }
    ],
    "react"
  ],
  "plugins": [
    "syntax-dynamic-import",
    [
      "transform-class-properties",
      {
        "spec": true
      }
    ],
    ["module-resolver", {
      "alias": {
        "stylesheets": './app/javascript/assets/stylesheets',
        "images": "./app/javascript/assets/images",
        html5video: "./node_modules/react-html5video",
        "config": "./app/javascript/config"
      }
    }]
  ]
}
